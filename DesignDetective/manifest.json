{
  "name": "DesignDetective",
  "version": "1.0",
  "description": "Fetch & print out the design cues of a website.",
  "minimum_chrome_version": "120",
  "background": {
    "service_worker": "scripts/background.js",
    "type": "module"
  },
  "permissions": [
    "activeTab",
    "userScripts",
    "scripting"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon/DesignDetectiveIcon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "scripts/contentScript.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "matches": [
        "*://*/*"
      ],
      "resources": [
        "style/*.css",
        "script/*.js"
      ]
    }
  ],
  "manifest_version": 3
}